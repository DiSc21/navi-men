##
## @brief: BATS based test environment for navi_men::countModesAndViews
##
## @usage: 'bats -p <this_bats_file>'
##
## @dependencies:
## - bats (-support/assert)
## - bash 4.3
## - jq
##


setup() {
  load '/usr/lib/bats/bats-support/load'
  load '/usr/lib/bats/bats-assert/load'

  load '../../src/navi_men.conf'
  load '../../src/navi_men_states.conf'

  load '../../src/navi_men_state_setter.bash'
}


#########################################################
# STANDARD ERRORS
#########################################################

@test "navi_men::countModesAndViews fail_no_args" {
  run countModesAndViews
  assert_failure
  assert_equal "$status" "${ERR_WRONG_NUM_OF_INPUTS}"
  assert_output --partial "'countModesAndViews' requires"
  assert_output --partial "got '0'!"
}
@test "navi_men::countModesAndViews fail_only_single_arg" {
  run countModesAndViews "petty"
  assert_failure
  assert_equal "$status" "${ERR_WRONG_NUM_OF_INPUTS}"
  assert_output --partial "'countModesAndViews' requires"
  assert_output --partial "got '1'!"
}
@test "navi_men::countModesAndViews fail_too_many_args" {
  run countModesAndViews "petty" "petty" "petty"
  assert_failure
  assert_equal "$status" "${ERR_WRONG_NUM_OF_INPUTS}"
  assert_output --partial "'countModesAndViews' requires"
  assert_output --partial "got '3'!"
}

# #########################################################
# # FUNCTIONALITY
# #########################################################

@test "navi_men::countModesAndViews helpers_called" {
  local -r pre_view="${JKEY_CORE_OBJECT_VIEWS}${MULTI_DIM_ARRAY_DELIMITER}"
  local -r pre_mode="${JKEY_CORE_OBJECT_MODES}${MULTI_DIM_ARRAY_DELIMITER}"

  local -A test_states=()
  test_states["${MDKEY_STATE_VIEW_CURRENT}"]="view_one"
  test_states["${MDKEY_STATE_MODE_CURRENT}"]="mode_one"

  local -A test_core_data=()
  test_core_data["${pre_mode}mode_one${MULTI_DIM_ARRAY_DELIMITER}${JKEY_MODE_ATTR_CMD}"]="cmd_one"
  test_core_data["${pre_mode}mode_two${MULTI_DIM_ARRAY_DELIMITER}${JKEY_MODE_ATTR_CMD}"]="cmd_two"
  test_core_data["${pre_mode}mode_three${MULTI_DIM_ARRAY_DELIMITER}${JKEY_MODE_ATTR_CMD}"]="cmd_three"
  test_core_data["${pre_view}view_one${MULTI_DIM_ARRAY_DELIMITER}wtf"]="wtf_one"
  test_core_data["${pre_view}view_two${MULTI_DIM_ARRAY_DELIMITER}wtf"]="wtf_two"

  run countModesAndViews test_core_data test_states
  assert_success
  countModesAndViews test_core_data test_states
  assert_equal "$?" 0
  assert_equal "${test_states[${MDKEY_STATE_MODE_NUMBER}]}" 3
  assert_equal "${test_states[${MDKEY_STATE_VIEW_NUMBER}]}" 2
}

